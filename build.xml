<!-- ANT build script for RMG -->
<project name="RMG">

    <target name="compile">
        <javac srcdir="source/RMG/" destdir="build/RMG/" optimize="true" />
    </target>
    
    <target name="jar" depends="compile">
        <jar destfile="bin/RMG.jar" basedir="build/RMG/">
            <manifest>
                <attribute name="Main-Class" value="RMG"/>
            </manifest>
        </jar>
    </target>

	<target name="clean" description="delete all compiled classes">
        <delete>
            <fileset dir=".">
                <include name="build/RMG/**/*.class"/>
                <include name="build/RMG/*.class"/>
                <include name="bin/RMG.jar"/>
            </fileset>
        </delete>
    </target>
    
</project>